{
  "app-id": "com.local.Lampray",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "Lampray",
  "finish-args": ["--share=ipc", "--socket=wayland", "--device=dri"],
  "build-options": {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g",
    "env": {
      "V": "1"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "Lampray",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
